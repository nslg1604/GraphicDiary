<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/newBackground"
    >

    <ImageView
        android:id="@+id/dialog_confirm_icon"
        android:layout_width="@dimen/s_040"
        android:layout_height="@dimen/s_040"
        android:layout_marginTop="@dimen/s_010"
        android:layout_marginBottom="@dimen/s_004"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/ic_warning"
        />

    <TextView
        android:id="@+id/dialog_confirm_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/dialog_confirm_icon"
        android:textColor="@color/newText"
        android:textSize="@dimen/t_030" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_010"
        android:layout_marginBottom="@dimen/s_020"
        android:layout_below="@id/dialog_confirm_message">

        <Button
            android:id="@+id/dialog_confirm_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/s_060"
            android:layout_marginLeft="@dimen/s_010"
            android:layout_marginRight="@dimen/s_010"
            android:layout_weight="0.50"
            android:background="@drawable/button_blue"
            android:text="OK"
            android:textColor="@color/newWhite"
            android:textAllCaps="false"
            android:textSize="@dimen/t_026" />

        <Button
            android:id="@+id/dialog_confirm_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/s_060"
            android:layout_marginLeft="@dimen/s_010"
            android:layout_marginRight="@dimen/s_010"
            android:layout_weight="0.50"
            android:background="@drawable/button_blue"
            android:text="Cancel"
            android:textColor="@color/newWhite"
            android:textAllCaps="false"
            android:textSize="@dimen/t_024" />

    </LinearLayout>
</RelativeLayout>