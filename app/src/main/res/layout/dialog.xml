<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/s_010"
        android:gravity="center"
        android:padding="@dimen/s_004"
        android:textSize="@dimen/t_030" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_060"
        android:layout_marginTop="@dimen/s_010"
        android:layout_marginBottom="@dimen/s_010"
        android:layout_below="@id/dialog_message">

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/s_060"
            android:layout_marginLeft="@dimen/s_030"
            android:layout_marginRight="@dimen/s_030"
            android:layout_marginBottom="@dimen/s_010"
            android:layout_weight="0.50"
            android:background="@drawable/button_blue"
            android:text="OK"
            android:textColor="@color/newWhite"
            android:textAllCaps="false"
            android:textSize="@dimen/t_026" />

    </LinearLayout>
</RelativeLayout>